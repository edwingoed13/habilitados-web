{
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/curso-2026",
      "dest": "/curso-2026/index.html"
    },
    {
      "src": "/listado-curso",
      "dest": "/listado-curso/index.html"
    },
    {
      "src": "/extemporaneo",
      "dest": "/extemporaneo/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/health",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
